{% extends 'base-iframe.html.twig' %}

{% block title %}{{ 'title.default'|toWording }}{% endblock %}
{% block body %}
    <section id="form">
        <div class="wrapper">
            <div class="row">
                <div class="col-xs-12">
                    <form action="" id="main-form">
                        <div class="row">
                            <div class="col-md-2 col-xs-12">
                                <label for="flat-type"> {{ 'index.input-type'|toWording }}</label>
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-wrapper">
                                    <select name="flat-type" class="select-type">
                                        {% for type in type_list %}
                                            <option value="{{ type.id }}">{{ type.title }}</option>
                                        {% endfor %}
                                    </select>
                                    <span class="info">?</span>
                                    <div class="tooltip">
                                        <div class="content"> {{ 'index.input-type-tooltip'|toWording }} </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-xs-12">
                                <label for="postal-code"> {{ 'index.input-postcode'|toWording }}</label>
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-wrapper">
                                    <input type="text" name="postal-code" value="40-668" maxlength="6">
                                    <span class="info">?</span>

                                    <div class="tooltip">
                                        <div class="content"> {{ 'index.input-postcode-tooltip'|toWording }} </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-xs-12">
                                <label for="rent"> {{ 'index.input-cost'|toWording }}</label>
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-wrapper">
                                    <input type="number" name="rent" min="0" value="400">
                                    <span class="info">?</span>

                                    <div class="tooltip">
                                        <div class="content"> {{ 'index.input-cost-tooltip'|toWording }} </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-2 col-xs-12">
                                <label for="area"> Powierzchnia w m<sup>2</sup></label>
                            </div>
                            <div class="col-md-9 col-xs-12">
                                <div class="input-wrapper">
                                    <input type="number" id="input__area" name="area" value="45" min="0">
                                    <span class="info">?</span>
                                    <div class="tooltip">
                                        <div class="content"> {{ 'index.input-msquare-tooltip'|toWording }} </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="wrong-data red">
                            Formularz wypełniono niepoprawnie.
                        </div>
                        {# <div class="row">
                            <div class="col-xs-3 col-xs-12">
                                <label for="area"></label>
                            </div>
                            <div class="col-xs-8 col-xs-10 policy">
                                <input type="checkbox" style="width: 25px; min-width: 0;" id="input__gdpr1"> {{ 'index.policy.gdpr1'|toWording|raw }}
                            </div>
                        </div> #}
                        <div class="row">
                            <div class="col-xs-3 col-xs-12">
                                <label for="area"></label>
                            </div>
                            <div class="col-xs-8 col-xs-10 policy">
                                <input type="checkbox" style="width: 25px; min-width: 0;" id="input__gdpr2"> {{ 'index.policy.gdpr2'|toWording|raw }}
                                <div class="error">Zaakceptuj proszę regulamin oraz politykę prywatności.</div>
                            </div>
                        </div>
                        <br>
                    </form>
                </div>
            </div>
            <div class="center-xs">
                <div class="col-xs-12">
                    <a href="#" id="compare" class="button yellow-bcg wide"> {{ 'index.button_compare'|toWording }} </a>
                </div>
            </div>
        </div>
    </section>
    <div id="data-loader">
        <div class="loader-text">Proszę czekać, trwa ładowanie danych...</div>
        <div class="sk-circle">
            <div class="sk-circle1 sk-child"></div>
            <div class="sk-circle2 sk-child"></div>
            <div class="sk-circle3 sk-child"></div>
            <div class="sk-circle4 sk-child"></div>
            <div class="sk-circle5 sk-child"></div>
            <div class="sk-circle6 sk-child"></div>
            <div class="sk-circle7 sk-child"></div>
            <div class="sk-circle8 sk-child"></div>
            <div class="sk-circle9 sk-child"></div>
            <div class="sk-circle10 sk-child"></div>
            <div class="sk-circle11 sk-child"></div>
            <div class="sk-circle12 sk-child"></div>
        </div>
    </div>
    <section class="compared bad" id="compared">
        <div class="wrapper">
            <div class="result">
                <span>
                    {{ 'layout.comparison_clicked_information'|toWording }}
                </span>
            </div>
            <div class="price-bar">
                <div class="min-price">
                    {{ 'index.cheapest'|toWording }} <br/>
                    <span data-min="5"> 5zł </span>
                </div>
                <div class="bar">
                    <div class="your-bar"></div>
                    <div class="your-result"> 15zł</div>
                    <div class="average" data-avg="10"> 10zł</div>
                </div>
                <div class="max-price">
                    {{ 'index.the_most_expensive'|toWording }}<br/>
                    <span data-max="50">50zł</span>
                </div>
            </div>
            <p class="big-paragraph">{{ 'index.result_comment_bad'|toWording }}</p>
            <div class="expensive">
                <p> {{ 'index.result_summary_header'|toWording|raw }} </p>
                <div class="center-xs" id="file">
                    <form action="">
                        <div class="center-xs row">
                            <div class="col-sm-4 cl-xs-12 align-right">
                                <label>{{ 'index.result_summary_text'|toWording }}</label>
                            </div>
                            <div class="col-sm-8 col-xs-12 align-left files">
                                <div data-id="1">
                                    <input class="start-xs file" type="file" id="addFile_1" name="file1">
                                    <label for="addFile_1" class="label-button"> Wybierz plik </label>
                                </div>
                                <div class="added-files"></div>
                            </div>
                        </div>
                        <div class="center-xs row">
                            <div class="col-sm-4 cl-xs-12 align-right">
                                <label>{{ 'index.result_summary_text'|toWording }}</label>
                            </div>
                            <div class="col-sm-8 col-xs-12 align-left advances">
                                <div data-id="1">
                                    <input class="start-xs advance" type="file" id="addAdvance_1" name="advance1">
                                    <label for="addAdvance_1" class="label-button"> Wybierz plik </label>
                                </div>
                                <div class="added-advances"></div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="red no-file-added">{{ 'index.warning_empty'|toWording }}<br><br></div>
                <div class="btn-analyse center-xs">
                    <div class="col-xs-12">
                        <a href="#price-analysis" id="analyse"
                           class="button yellow-bcg wide"> {{ 'index.button_analyse'|toWording }} </a>
                        <br>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <section class="price-analysis" id="price-analysis">
        <div class="wrapper">
            <form action="">
                <div class="row">
                    {% for group in ['udzialy', 'koszty', 'zaliczki', 'deweloper', 'zarzad'] %}
                        <h3 style="width: 100%; margin: 20px 0; display: block;">{{ ('layout.group.' ~ group)|toWording }}</h3>
                        {% include 'landing/_bills.html.twig' with {'group': group}%}
                    {% endfor %}
                </div>
                <div class="row end-xs savings">
                    <div class="col-xs-12">
                        <div class="red"> {{ 'index.avg_info'|toWording }} <span class="saving-amount">  </span></div>
                    </div>
                </div>
            </form>
            <div class="empty-inputs red"> Uzupełnij wszystkie pola.</div>
            <br/>
            <br/>
            <div class=" center-xs">
                <div class="col-xs-12">
                    <a href="#export" id="export"
                       class="button yellow-bcg wide"> {{ 'btn.export_to_pdf'|toWording }} </a>
                </div>
            </div>
            <div class="pdf-show" style="display:none;">
                <div class="">
                    <div class="bill-pdf">
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
